NODE_ENV=production
PORT=3000
DATABASE_URL=postgresql://postgres:replace_password@db-host:5432/greenspoon?schema=public

RAZORPAY_KEY_ID=rzp_live_replace_with_your_key
RAZORPAY_KEY_SECRET=replace_with_live_secret

CORS_ORIGIN=https://app.example.com
JWT_ACCESS_SECRET=replace_with_long_random_secret
JWT_ACCESS_TTL=15m
REFRESH_TOKEN_TTL_DAYS=30

AUTH_PASSWORD_HASH_ROUNDS=12
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_MS=900000
AUTH_LOGIN_RATE_WINDOW_MS=900000
AUTH_LOGIN_RATE_MAX_ATTEMPTS=15

LOG_LEVEL=info
LOG_FILE_PATH=/var/log/greenspoon/backend.log
SERVICE_NAME=greenspoon-backend

SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com
DATADOG_SOURCE=nodejs

PUBLIC_BASE_URL=https://api.example.com
UPLOAD_DIR=/var/lib/greenspoon/uploads
UPLOAD_MAX_FILE_SIZE_MB=5

DEFAULT_TENANT_ID=greenspoon-demo-tenant
CUSTOMER_LOOKUP_OTP_TTL_MS=300000
CUSTOMER_LOOKUP_OTP_MAX_ATTEMPTS=5
ENABLE_DEBUG_OTP=false
ENABLE_TRACKING_SIMULATION=false
